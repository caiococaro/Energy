<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcompanhamEquipeTecnica">

    <LinearLayout
        android:id="@+id/layoutStatus"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/layout_status_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp">
            <ImageView
                android:id="@+id/imagem1"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/grey_circle_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/solicitado"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp">
            <ImageView
                android:id="@+id/imagem2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/grey_circle_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/emAnalise"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp">
            <ImageView
                android:id="@+id/imagem3"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/grey_circle_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/equipeSelecionada"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp">
            <ImageView
                android:id="@+id/imagem4"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/grey_circle_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/equipeACaminho"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp">
            <ImageView
                android:id="@+id/imagem5"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/grey_circle_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/emAndamento"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp">
            <ImageView
                android:id="@+id/imagem6"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/grey_circle_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/finalizado"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:onClick="showPopUp"/>

        </LinearLayout>
        <ProgressBar
            android:id="@+id/progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:visibility="visible"
            android:background="@drawable/rounded_edittext"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="279dp"
        android:layout_height="217dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="200dp"
            android:text="0%" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:layout_alignParentTop="true"
            android:layout_gravity="left"
            android:text="100%" />


    </RelativeLayout>

  <TextView
        android:id="@+id/txt_nao_solicitado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/naoSolicitado"
        android:textSize="20sp"
        android:layout_centerInParent="true"/>
</RelativeLayout>
