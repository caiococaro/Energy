<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".CadastroClienteVital">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/borda_preta">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/vital_2"
            android:layout_marginBottom="20dp"/>
        <EditText
            android:id="@+id/etNomePaciente"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Nome do paciente"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/tvNumPaciente"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Número do cliente (UC)"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/etEquipamento"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Equipamentos usados pelo paciente"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/etCRMMedico"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_edittext"
            android:hint="CRM do médico"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnFoto"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Anexar Foto"
            android:textColor="#FFFFFF"
            android:background="@drawable/circle_button"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>
        <Button
            android:id="@+id/btnAtualizar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Atualizar Dados"
            android:textColor="#FFFFFF"
            android:background="@drawable/circle_button"
            android:onClick="Enviar"
            android:gravity="center_horizontal"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>