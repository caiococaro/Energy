<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroClienteVital">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_margin="40dp"
        android:background="@drawable/borda_preta">
            <TextView
                android:layout_width="330dp"
                android:layout_height="40dp"
                android:text="Nome do defunto"
                android:gravity="center_horizontal"
                android:paddingBottom="20dp"/>
            <EditText
                android:id="@+id/etNomePaciente"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="NÃºmero do defunto"
                android:gravity="center_horizontal"/>
            <EditText
                android:id="@+id/etNumPaciente"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="CRM do curandeiro"
                android:gravity="center_horizontal"/>
            <EditText
                android:id="@+id/etCRMMedico"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Equipamentos usados pelo paciente"
                android:gravity="center_horizontal"/>
            <EditText
                android:id="@+id/etEquipamento"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal"/>
        <Button
            android:id="@+id/btnFoto"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Anexar Foto"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnAtualizar"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Atualizar Dados"
            android:gravity="center_horizontal"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>